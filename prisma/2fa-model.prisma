model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model TwoFactorToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  type      String   // EMAIL_2FA, SMS_2FA
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([token])
}
